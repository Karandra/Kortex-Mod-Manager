				<Item ID="BooksAndScrolls">
					<NexusID>98</NexusID>
				</Item>
				<Item ID="Alchemy">
					<NexusID>94</NexusID>
				</Item>
				<Item ID="Quests">
					<NexusID>35</NexusID>
				</Item>
				<Item ID="Buildings">
					<NexusID>95</NexusID>
				</Item>
				<Item ID="Settlements">
					<NexusID>53</NexusID>
				</Item>
				<Item ID="Mercantiles">
					<NexusID>69</NexusID>

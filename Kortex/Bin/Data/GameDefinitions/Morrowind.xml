				<Item ID="Gameplay">
					<NexusID>24</NexusID>
				</Item>
				<Item ID="Immersion">
					<NexusID>78</NexusID>
				</Item>
				<Item ID="Environment">
					<NexusID>74</NexusID>
				</Item>
